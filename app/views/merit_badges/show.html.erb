<h1><%= @merit_badge.name %> Merit Badge</h1>

<table class="detail">
  <tr>
    <% th_merit_badge_eagle_required(@merit_badge) %>
  <% if admin? %>
    <td class="actions">
      <%= link_to 'Edit', edit_merit_badge_path(@merit_badge) %>
    <% if @merit_badge.unused? %>
      <%= link_to 'Delete', @merit_badge,
        :confirm => "Delete unused #{@merit_badge.name} merit badge?", :method => :delete %>
    <% end %>
    </td>
  <% end %>
  </tr>
</table>

<p>
  (<a href="http://meritbadge.org/wiki/index.php/Boy_Scout_Portal">MeritBadge.Org</a>:
  <a href="<%= 'http://meritbadge.org/wiki/index.php/' + @merit_badge.name.gsub(/ /, '_') %>"><%= @merit_badge.name %></a>)
</p>

<table class="listing">
  <tr>
    <th>Scout</th>
    <th>Earned</th>
    <% toggle_show_inactive_td %>
  </tr>
<% smbs = show_inactive? ? @merit_badge.scout_merit_badges : @merit_badge.active_scout_merit_badges %>
<% smbs.each do |smb| %>
  <tr>
    <td><%= link_to smb.scout.name, smb.scout %></td>
    <td><%= smb.earned %></td>
  </tr>
<% end %>
</table>

