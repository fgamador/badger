<h1><%= @award.name %> Award</h1>

<table class="detail">
  <tr>
    <th><%= @award.one_per_scout ? "One per scout" : "Unlimited" %></th>
  <% if admin? %>
    <td class="actions"><%= link_to 'Edit', edit_award_path(@award) %></td>
    <% if @award.unused? %>
      <%= link_to 'Delete', @award,
        :confirm => "Delete unused #{@award.name} award?", :method => :delete %>
    <% end %>
  <% end %>
  </tr>
</table>

<table class="listing vsep">
  <tr>
    <th>Scout</th>
    <th>Earned</th>
    <% toggle_show_inactive_td %>
  </tr>
<% sas = show_inactive? ? @award.scout_awards : @award.active_scout_awards %>
<% sas.sort {|sa1,sa2| ScoutAward.by_scout_then_earned(sa1, sa2) }.each do |sa| %>
  <tr>
    <td><%= link_to sa.scout.name, sa.scout %></td>
    <td><%= sa.earned %></td>
  </tr>
<% end %>
</table>

